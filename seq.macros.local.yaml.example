# Optional local macros overlay (loaded automatically if renamed to `seq.macros.local.yaml`)
#
# This file is intentionally not generated by tools/gen_macros.py.
#
# Feature: mark adjacent steps with `parallel: true` to run them concurrently.
# Current safety policy: only `open_url` steps are parallelized.

- name: "Open 2 Tabs Parallel (Arc)"
  action: sequence
  arg: ""
  steps:
    - action: open_app
      arg: "Arc"
    - action: open_url
      app: "Arc"
      arg: "https://example.com"
      parallel: true
    - action: open_url
      app: "Arc"
      arg: "https://example.org"
      parallel: true

